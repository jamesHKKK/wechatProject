.boxList{
    width: 100%;
    height: 70rpx;
    line-height: 70rpx;
    background: #fff;
    padding: 20rpx;
    margin-bottom: 2rpx;
}
.boxImg{
    float: left;
    width: 50rpx;
    height: 50rpx;
    margin: 10rpx 30rpx 10rpx 30rpx;
}
.boxText{
    float: left;
}
.userBox{
    margin-top: 30rpx;
}
.boxBottom{
    width: 100%;
}
.boxBtn{
    width: 90%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    background-color:#1775fb;
    color: #fff;
    position: fixed;
    bottom: 30rpx;
    left: 5%;
    border-radius: 10rpx;
}