/* component/error/errorPage.wxss */

.linear {
  position: fixed;
  z-index: 998 !important;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  background: #fff;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.error-img {
  width: 350rpx;
  height: 350rpx;
  margin: 240rpx 0 40rpx;
}

.error-text {
  color: #666;
  font-size: 28rpx;
  line-height: 1.5rem;
  text-align: center;
}

.error-retry {
  color: #fcc800;
  font-size: 30rpx;
  line-height: 1.5rem;
}