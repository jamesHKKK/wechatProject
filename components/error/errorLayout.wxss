/* component/error/errorLayout.wxss */

.linear {
  width: 100vw;
  height: auto;
  overflow: hidden;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.error-img {
  width: 350rpx;
  height: 350rpx;
  margin: 240rpx 0 40rpx;
}

.error-text {
  color: #666;
  font-size: 28rpx;
}

.error-retry {
  color: #fcc800;
  font-size: 30rpx;
}
